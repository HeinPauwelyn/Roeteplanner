<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/locatie_toevoegen"
        android:id="@+id/txvHeaderText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/txvHeaderText"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnToevoegen">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/postcode_gemeente"
            android:id="@+id/txvGemeente"
            android:layout_below="@+id/txvHeaderText"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtGemeente"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/txvGemeente"
            android:layout_alignParentLeft="true" />
    </LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout3"
    android:orientation="vertical"
    android:layout_above="@+id/btnToevoegen"
    android:layout_alignParentEnd="true"
    android:layout_alignTop="@+id/linearLayout4">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/straat_nummer"
        android:id="@+id/txvStraat"
        android:layout_below="@+id/edtGemeente"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp" />

    <EditText
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtStraat"
        android:layout_below="@+id/txvStraat"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toevoegen"
        android:id="@+id/btnToevoegen"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnAnnuleren" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/annuleren"
        android:id="@+id/btnAnnuleren"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
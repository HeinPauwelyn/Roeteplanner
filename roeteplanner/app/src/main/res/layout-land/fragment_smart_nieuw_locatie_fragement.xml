<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/nieuwe_locatie"
        android:id="@+id/txvNieuweLocatieText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/locatie"
            android:id="@+id/txvNaam"
            android:layout_marginTop="0dp"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/bedoeld_u"
            android:id="@+id/textView2"
            android:layout_row="0"
            android:layout_column="1" />

        <EditText
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtLocatie"
            android:layout_row="1"
            android:layout_column="0" />

        <LinearLayout
            android:layout_row="1"
            android:layout_column="1">

            <TextView
            android:layout_width="231dp"
            android:layout_height="54dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/klik_op_vernieuw_knop_om_gegevens_te_laden"
            android:id="@+id/txvBedoeling"
            android:textColor="#000000"/>

            <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRefresh"
            android:src="@mipmap/ic_refresh"/>
        </LinearLayout>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/toevoegen"
            android:id="@+id/btnToevoegen"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/annuleren"
            android:id="@+id/btnAnnuleren"
            android:layout_row="2"
            android:layout_column="1" />

    </GridLayout>
</RelativeLayout>